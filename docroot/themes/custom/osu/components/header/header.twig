{% set _image = block('image') %}
{% set _video = block('video') %}
{% set _cta = block('cta')|render|striptags|trim %}
{% set _links = block('links')|render|striptags|trim %}

<div class="component header flex-container flex-jc-space-between flex-ai-flex-start flex-dir-column
  {% if _video is not empty %}has-video{% endif %}
  {% if _image is not empty %}has-image{% endif %}
  {% if _cta is not empty %}has-cta{% endif %}
  {% if _links is not empty %}has-links{% endif %}
">
  <div class="header__inner">
    {% if _image is not empty and _video|render|trim is empty %}
      <div class="header__image">
        {% block image %}{% endblock %}
      </div>
    {% endif %}

    {% if _video|render|trim is not empty %}
      <div class="header__video">
        <div class="header__video-controls">
          <button class="header__video-controls__button header__video-play" aria-label="Play video">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#FFFFFF">
              <path d="m380-300 280-180-280-180v360ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Z"/>
            </svg>
            <span class="color-white">
              {{ 'This video has no sound.'|t }}
            </span>
          </button>
          <button class="header__video-controls__button header__video-pause" aria-label="Pause video">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#FFFFFF">
              <path d="M360-320h80v-320h-80v320Zm160 0h80v-320h-80v320ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Z"/>
            </svg>
            <span class="color-white">
              {{ 'This video has no sound.'|t }}
            </span>
          </button>
        </div>
        {% block video %}{% endblock %}
      </div>
    {% endif %}

    <div class="header__text-wrapper">
      <div class="header__text inner-row">
        {% if eyebrow_text %}
          <p class="header__text__eyebrow_text color-white">{{ eyebrow_text }}</p>
        {% endif %}
        {% if heading %}
          <h1 class="header__text__heading color-white">{{ heading }}</h1>
        {% endif %}
      </div>
    </div>
  </div>
  {% if _cta|render|trim is not empty %}
    <div class="header__cta-wrapper">
        {% block cta %}{% endblock %}
    </div>
  {% endif %}

  {% if _links|render|trim is not empty %}
    <div class="header__links-wrapper">
        {% block links %}{% endblock %}
    </div>
  {% endif %}

</div>
